{
  "name": "@magda/csw-connector",
  "description": "MAGDA OGC Catalogue Service for the Web (CSW) Connector",
  "version": "0.0.56-terria-4",
  "scripts": {
    "build": "yarn run compile",
    "compile": "yarn run compile-node && yarn run compile-browser",
    "compile-node": "tsc -p tsconfig-build.json",
    "compile-browser": "webpack --config src/webpack.config.js",
    "watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto --repository asia.gcr.io/terriajs-automated-deployment",
    "retag-and-push": "retag-and-push",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@magda/scripts": "^0.0.56-terria-4",
    "@types/jsonpath": "^0.1.29",
    "@types/lodash": "^4.14.66",
    "@types/nock": "^9.3.0",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.48.1",
    "@types/urijs": "^1.15.34",
    "@types/xml2js": "0.0.33",
    "@types/xmldom": "^0.1.29",
    "@types/yargs": "^12.0.8",
    "nock": "^10.0.0",
    "ts-loader": "^2.3.7",
    "typescript": "^3.2.0",
    "webpack": "^3.6.0"
  },
  "dependencies": {
    "@magda/registry-aspects": "^0.0.56-terria-4",
    "@magda/typescript-common": "^0.0.56-terria-4",
    "jsonpath": "^1.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "read-pkg-up": "^3.0.0",
    "request": "^2.88.0",
    "urijs": "^1.18.12",
    "xml2js": "^0.4.17",
    "xmldom": "^0.1.27",
    "yargs": "^12.0.5"
  },
  "config": {
    "registryUrl": "http://localhost:6101/v0",
    "docker": {
      "name": "data61/magda-csw-connector",
      "include": "node_modules aspect-templates dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "userId": "00000000-0000-4000-8000-000000000000"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "connector": true
    }
  }
}
