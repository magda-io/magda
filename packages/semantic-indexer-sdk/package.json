{
  "name": "@magda/semantic-indexer-sdk",
  "description": "MAGDA Semantic Indexer SDK",
  "version": "5.2.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn build-main && yarn build-types && yarn build-types-bundle",
    "build-main": "node esbuild.js",
    "build-types": "tsc --emitDeclarationOnly",
    "build-types-bundle": "api-extractor run --local",
    "release": "npm publish || echo \"Skip releasing npm package @magda/semantic-indexer-sdk.\""
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@magda/semantic-indexer-framework": "^5.2.0",
    "@microsoft/api-extractor": "~7.39.0",
    "esbuild": "^0.19.10",
    "ts-loader": "^9.5.1",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "@magda/typescript-common": "^5.2.0",
    "@opensearch-project/opensearch": "^3.5.1",
    "@types/express": "^4.17.21",
    "@types/urijs": "^1.19.19",
    "@types/yargs": "^12.0.8"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "npmPackage": true,
      "useMinionLib": true
    }
  },
  "keywords": [
    "Magda",
    "Semantic",
    "Indexer",
    "SDK"
  ],
  "files": [
    "dist"
  ]
}
