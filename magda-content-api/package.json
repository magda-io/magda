{
  "name": "@magda/content-api",
  "version": "2.2.4-alpha.0",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "test": "nyc mocha --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\"",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@magda/content-schemas": "^2.2.4-alpha.0",
    "@magda/typescript-common": "^2.2.4-alpha.0",
    "body-parser": "^1.13.2",
    "djv": "^2.1.4",
    "express": "^4.17.1",
    "http-terminator": "^3.2.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.4",
    "mime-types": "^2.1.20",
    "pg": "^8.7.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "sql-syntax": "^1.1.3",
    "tsmonad": "^0.7.2",
    "wildcard": "^1.1.2",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^2.2.4-alpha.0",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.17.6",
    "@types/lodash": "^4.14.96",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^2.2.47",
    "@types/nock": "^9.1.2",
    "@types/pg": "^8.6.5",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.16",
    "@types/sinon": "^4.1.3",
    "@types/supertest": "^2.0.4",
    "@types/urijs": "^1.19.19",
    "@types/yargs": "^12.0.8",
    "chai": "^4.1.2",
    "mocha": "^3.5.3",
    "nock": "^9.1.6",
    "nyc": "^13.1.0",
    "sinon": "^4.2.1",
    "supertest": "^3.0.0",
    "typescript": "~4.2.4"
  },
  "config": {
    "docker": {
      "name": "magda-content-api",
      "include": "node_modules dist Dockerfile"
    },
    "jwtSecret": "squirrel",
    "SESSION_SECRET": "keyboard cat"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "uses-pg": true
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
