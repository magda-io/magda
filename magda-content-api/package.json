{
  "name": "@magda/content-api",
  "version": "4.0.0-alpha.2",
  "license": "Apache-2.0",
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "test": "c8 mocha",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@magda/content-schemas": "^4.0.0-alpha.2",
    "@magda/esm-utils": "^1.0.1",
    "@magda/tsmonad": "^0.9.0",
    "@magda/typescript-common": "^4.0.0-alpha.2",
    "djv": "^2.1.4",
    "express": "^4.17.2",
    "http-terminator": "^3.2.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.4",
    "mime-types": "^2.1.20",
    "pg": "^8.11.3",
    "sql-syntax": "^2.0.1",
    "wildcard": "^2.0.1",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^4.0.0-alpha.2",
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.96",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^10.0.6",
    "@types/pg": "^8.6.5",
    "@types/sinon": "^4.1.3",
    "@types/supertest": "^2.0.16",
    "@types/urijs": "^1.19.19",
    "@types/yargs": "^12.0.8",
    "c8": "^9.0.0",
    "chai": "^5.0.0-rc.0",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "sinon": "^4.2.1",
    "supertest": "^6.3.3",
    "typescript": "~5.3.3"
  },
  "mocha": {
    "import": "tsx/esm",
    "spec": [
      "src/test/**/*.spec.ts"
    ]
  },
  "config": {
    "docker": {
      "name": "magda-content-api",
      "include": "node_modules dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "SESSION_SECRET": "keyboard cat"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "uses-pg": true
    }
  },
  "c8": {
    "all": true,
    "clean": true,
    "src": [
      "./src"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
