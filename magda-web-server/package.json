{
  "name": "@magda/web-server",
  "description": "The server that serves the MAGDA web front end.",
  "version": "2.2.1",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts --baseExternalUrl=http://localhost:6107/ --baseUrl=http://dev.magda.io/",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\""
  },
  "devDependencies": {
    "@magda/scripts": "^2.2.1",
    "@magda/web-client": "^2.2.1",
    "@types/chai": "^4.0.1",
    "@types/config": "0.0.32",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^9.0.8",
    "@types/helmet": "0.0.37",
    "@types/lodash": "^4.14.68",
    "@types/mocha": "^2.2.41",
    "@types/moment-timezone": "^0.5.30",
    "@types/morgan": "^1.7.35",
    "@types/nock": "^8.2.1",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.48.1",
    "@types/sinon": "^2.3.3",
    "@types/supertest": "^2.0.2",
    "@types/urijs": "^1.19.19",
    "@types/xml2js": "^0.4.0",
    "@types/yaml-front-matter": "^4.1.0",
    "@types/yargs": "^12.0.8",
    "chai": "^4.1.0",
    "mocha": "^3.4.2",
    "nock": "^9.0.14",
    "sinon": "^2.4.1",
    "supertest": "^3.0.0",
    "typed-promisify": "^0.4.0",
    "typescript": "~4.2.4",
    "xml2js": "^0.4.19"
  },
  "dependencies": {
    "@magda/typescript-common": "^2.2.1",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "http-terminator": "^3.2.0",
    "moment-timezone": "^0.5.33",
    "morgan": "^1.9.0",
    "read-pkg-up": "^3.0.0",
    "request": "^2.88.0",
    "sitemap": "^1.13.0",
    "urijs": "^1.19.11",
    "yaml-front-matter": "^4.0.0",
    "yargs": "^12.0.5"
  },
  "config": {
    "docker": {
      "name": "magda-web-server",
      "include": "node_modules dist Dockerfile package.json ../node_modules/@magda/web-client/package.json ../node_modules/@magda/web-client/build"
    }
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "ui": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
