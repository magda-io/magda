{
  "name": "@magda/web-server",
  "description": "The server that serves the MAGDA web front end.",
  "version": "5.0.0-alpha.2",
  "license": "Apache-2.0",
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts --baseExternalUrl=http://localhost:6107/ --baseUrl=http://dev.magda.io/",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push",
    "test": "c8 mocha"
  },
  "devDependencies": {
    "@magda/scripts": "^5.0.0-alpha.2",
    "@magda/web-client": "^5.0.0-alpha.2",
    "@types/chai": "^4.3.11",
    "@types/config": "0.0.32",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/helmet": "0.0.37",
    "@types/lodash": "^4.14.68",
    "@types/mocha": "^10.0.6",
    "@types/moment-timezone": "^0.5.30",
    "@types/morgan": "^1.7.35",
    "@types/read-pkg-up": "^3.0.1",
    "@types/sinon": "^2.3.3",
    "@types/supertest": "^2.0.16",
    "@types/urijs": "^1.19.19",
    "@types/xml2js": "^0.4.0",
    "@types/yaml-front-matter": "^4.1.3",
    "@types/yargs": "^12.0.8",
    "c8": "^9.0.0",
    "chai": "^5.0.0-rc.0",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "sinon": "^2.4.1",
    "supertest": "^6.3.3",
    "typed-promisify": "^0.4.0",
    "typescript": "~5.3.3",
    "xml2js": "^0.4.19"
  },
  "dependencies": {
    "@magda/esm-utils": "^1.0.1",
    "@magda/typescript-common": "^5.0.0-alpha.2",
    "express": "^4.21.2",
    "fs-extra": "^11.2.0",
    "http-terminator": "^3.2.0",
    "moment-timezone": "^0.5.33",
    "morgan": "^1.9.0",
    "node-fetch": "^3.3.2",
    "read-pkg-up": "^3.0.0",
    "sitemap": "^7.1.1",
    "urijs": "^1.19.11",
    "yaml-front-matter": "^4.1.1",
    "yargs": "^12.0.5"
  },
  "c8": {
    "all": true,
    "clean": true,
    "src": [
      "./src"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "mocha": {
    "import": "tsx/esm",
    "spec": [
      "src/test/**/*.spec.ts"
    ]
  },
  "config": {
    "docker": {
      "name": "magda-web-server",
      "include": "node_modules dist Dockerfile package.json ../node_modules/@magda/web-client/package.json ../node_modules/@magda/web-client/build"
    }
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "ui": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
