{
  "name": "@magda/search-api-node",
  "version": "2.2.1",
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "test": "nyc mocha --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\"",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@elastic/elasticsearch": "6.8.6",
    "@magda/typescript-common": "^2.2.1",
    "express": "^4.17.1",
    "express-validation": "^3.0.2",
    "geojson": "^0.5.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.4",
    "tsmonad": "^0.7.2",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^2.2.1",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.17.6",
    "@types/geojson": "^7946.0.7",
    "@types/hapi__joi": "^16.0.12",
    "@types/lodash": "^4.14.96",
    "@types/mocha": "^2.2.47",
    "@types/nock": "^9.1.2",
    "@types/sinon": "^4.1.3",
    "@types/supertest": "^2.0.4",
    "@types/yargs": "^12.0.8",
    "casual": "^1.6.0",
    "chai": "^4.1.2",
    "mocha": "^3.5.3",
    "nock": "^9.1.6",
    "nyc": "^13.1.0",
    "sinon": "^4.2.1",
    "supertest": "^3.0.0",
    "typescript": "~4.2.4"
  },
  "config": {
    "docker": {
      "name": "magda-search-api-node",
      "include": "node_modules dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "SESSION_SECRET": "keyboard cat"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "uses-es": true
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
