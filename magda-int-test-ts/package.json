{
  "name": "@magda/int-test-ts",
  "description": "Integration test cases in typescript",
  "version": "6.0.0-alpha.2",
  "license": "Apache-2.0",
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
