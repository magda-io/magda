  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/dockerode": "^3.3.7",
    "@types/lodash": "^4.14.73",
    "@types/minio": "^7.0.12",
    "@types/mocha": "^10.0.6",
    "@types/pg": "^8.6.5",
    "@types/sinon": "^4.1.3",
    "@types/urijs": "^1.19.19",
    "chai": "^5.0.0-rc.0",
    "cross-fetch": "^4.0.0",
    "jsonwebtoken": "^8.4.0",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "sinon": "^4.2.1"
  },
  "dependencies": {
    "@magda/esm-utils": "^1.0.1",
    "@magda/typescript-common": "^6.0.0-alpha.2",
    "commander": "^11.1.0",
    "dockerode": "^3.3.1",
    "dockerode-compose": "^1.4.0",
    "form-data": "^4.0.0",
    "fs-extra": "11.2.0",
    "lodash": "^4.17.11",
    "minio": "^8.0.5",
    "pg": "^8.11.3",
    "tempy": "^1.0.1",
    "typescript": "~5.3.3",
    "urijs": "^1.19.11",
    "uuid": "^8.2.0"
  },
  "mocha": {
    "import": "tsx/esm",
    "spec": [
      "src/tests/**/*.spec.ts"
    ]
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "test": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
