{
  "name": "@magda/gateway",
  "description": "The public gateway to all of MAGDA, including the API and web front end.",
  "version": "2.2.1",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts --ckanUrl https://data.gov.au",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push",
    "test": "PGUSER=postgres mocha --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\""
  },
  "dependencies": {
    "@magda/tenant-api": "^2.2.1",
    "@magda/typescript-common": "^2.2.1",
    "body-parser": "^1.13.2",
    "compression": "^1.7.2",
    "connect-pg-simple": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.3",
    "escape-string-regexp": "^1.0.5",
    "express": "^4.17.1",
    "express-basic-auth": "^1.1.5",
    "express-session": "^1.17.1",
    "helmet": "^3.12.0",
    "http-proxy": "^1.16.2",
    "http-terminator": "^3.2.0",
    "is-uuid": "^1.0.2",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.4.0",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "morgan": "^1.6.1",
    "passport": "^0.2.2",
    "pg": "^8.7.3",
    "read-pkg-up": "^3.0.0",
    "request": "^2.88.0",
    "tsmonad": "^0.7.2",
    "urijs": "^1.19.11",
    "uuid": "^8.2.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^2.2.1",
    "@types/chai": "^4.0.1",
    "@types/compression": "^0.0.36",
    "@types/cookie": "^0.3.3",
    "@types/cookie-signature": "^1.0.3",
    "@types/cors": "^2.8.1",
    "@types/escape-string-regexp": "^1.0.0",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.15.15",
    "@types/http-proxy": "^1.16.0",
    "@types/is-uuid": "^1.0.0",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^2.2.41",
    "@types/nock": "^8.2.1",
    "@types/passport": "^1.0.3",
    "@types/pg": "^8.6.5",
    "@types/q": "^1.5.2",
    "@types/randomstring": "^1.1.6",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.48.1",
    "@types/sinon": "^2.3.3",
    "@types/supertest": "^2.0.2",
    "@types/urijs": "^1.19.19",
    "@types/uuid": "^8.0.0",
    "@types/yargs": "^12.0.8",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^3.4.2",
    "nock": "https://github.com/magda-io/nock.git#master",
    "randomstring": "^1.1.5",
    "sinon": "^2.4.1",
    "supertest": "^3.0.0",
    "typescript": "~4.2.4"
  },
  "config": {
    "docker": {
      "name": "magda-gateway",
      "include": "node_modules dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "SESSION_SECRET": "keyboard cat",
    "userId": "00000000-0000-4000-8000-000000000000"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "uses-pg": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
