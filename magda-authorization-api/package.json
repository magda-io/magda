{
  "name": "@magda/authorization-api",
  "version": "4.2.2",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./dist/*.js": "./dist/*.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "dev": "export PGUSER=client && run-typescript-in-nodemon src/index.ts",
    "test": "c8 mocha",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@magda/esm-utils": "^1.0.1",
    "@magda/tsmonad": "^0.9.0",
    "@magda/typescript-common": "^4.2.2",
    "bcrypt": "^5.1.1",
    "express": "^4.17.2",
    "http-terminator": "^3.2.0",
    "is-uuid": "^1.0.2",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.4",
    "node-fetch": "^3.3.2",
    "object-path": "^0.11.4",
    "pg": "^8.11.3",
    "sql-syntax": "^2.0.1",
    "text-treeview": "^1.0.1",
    "urijs": "^1.19.11",
    "uuid": "^8.2.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^4.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.0",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/is-uuid": "^1.0.0",
    "@types/lodash": "^4.14.96",
    "@types/mocha": "^10.0.6",
    "@types/object-path": "^0.11.0",
    "@types/pg": "^8.6.5",
    "@types/recursive-readdir": "^2.2.0",
    "@types/sinon": "^7.0.11",
    "@types/supertest": "^2.0.16",
    "@types/urijs": "^1.19.19",
    "@types/uuid": "^8.0.0",
    "@types/yargs": "^12.0.8",
    "c8": "^9.0.0",
    "chai": "^5.0.0-rc.0",
    "chai-as-promised": "^7.1.1",
    "fs-extra": "^11.2.0",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "recursive-readdir": "^2.2.2",
    "sinon": "^7.3.1",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3"
  },
  "config": {
    "docker": {
      "name": "magda-authorization-api",
      "include": "node_modules dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "SESSION_SECRET": "keyboard cat",
    "userId": "00000000-0000-4000-8000-000000000000"
  },
  "mocha": {
    "import": "tsx/esm",
    "spec": [
      "src/test/**/*.spec.ts"
    ]
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "uses-pg": true
    }
  },
  "c8": {
    "all": true,
    "clean": true,
    "src": [
      "./src"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
