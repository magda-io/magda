{
  "name": "@magda/semantic-search-api",
  "version": "5.6.0",
  "type": "module",
  "exports": "./dist/index.js",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "test": "c8 mocha",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@magda/typescript-common": "^5.3.1",
    "@opensearch-project/opensearch": "^2.11.0",
    "axios": "^1.6.8",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-validation": "^4.1.1",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^5.3.1",
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.21",
    "@types/hapi__joi": "^17.1.15",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.15.5",
    "@types/request": "^2.48.13",
    "@types/yargs": "^12.0.8",
    "c8": "^9.0.0",
    "chai": "^5.0.0-rc.0",
    "mocha": "^10.2.0",
    "typescript": "~5.3.3"
  },
  "mocha": {
    "exit": true,
    "import": "tsx/esm",
    "spec": [
      "src/test/**/*.spec.ts"
    ]
  },
  "config": {
    "docker": {
      "name": "magda-semantic-search-api",
      "include": "node_modules dist Dockerfile package.json"
    }
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "uses-es": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  },
  "c8": {
    "all": true,
    "clean": true,
    "src": [
      "./src"
    ],
    "exclude": [
      "src/test/**"
    ]
  }
}
