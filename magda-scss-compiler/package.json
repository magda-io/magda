{
  "name": "@magda/magda-scss-compiler",
  "description": "The web-client SCSS compiler pod",
  "version": "2.3.3",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push",
    "test": "c8 mocha"
  },
  "devDependencies": {
    "@magda/scripts": "^2.3.3",
    "@types/chai": "^4.3.11",
    "@types/clean-css": "^3.4.30",
    "@types/config": "0.0.32",
    "@types/escape-string-regexp": "^1.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.68",
    "@types/mocha": "^10.0.6",
    "@types/node-sass": "^3.10.32",
    "@types/read-pkg-up": "^3.0.1",
    "@types/recursive-readdir": "^2.2.0",
    "@types/request": "^2.48.1",
    "@types/sinon": "^2.3.3",
    "@types/tempy": "^0.1.0",
    "@types/urijs": "^1.19.19",
    "@types/yargs": "^12.0.8",
    "chai": "^5.0.0-rc.0",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "sinon": "^2.4.1",
    "c8": "^9.0.0",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "@magda/typescript-common": "^2.3.3",
    "@magda/esm-utils": "^1.0.1",
    "@magda/web-client": "^2.3.3",
    "autoprefixer": "^10.4.16",
    "clean-css": "^4.2.1",
    "escape-string-regexp": "^1.0.5",
    "fs-extra": "^11.2.0",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.32",
    "read-pkg-up": "^3.0.0",
    "recursive-readdir": "^2.2.2",
    "request": "^2.88.0",
    "tempy": "^0.2.1",
    "urijs": "^1.19.11",
    "yargs": "^12.0.5"
  },
  "mocha": {
    "import": "tsx/esm",
    "spec": [
      "src/test/**/*.spec.ts"
    ]
  },
  "c8": {
    "all": true,
    "clean": true,
    "src": [
      "./src"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "config": {
    "docker": {
      "name": "magda-scss-compiler",
      "include": "node_modules dist Dockerfile setup.sh package.json"
    },
    "jwtSecret": "squirrel",
    "userId": "00000000-0000-4000-8000-000000000000"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "ui": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
