{
  "name": "@magda/correspondence-api",
  "description": "MAGDA correspondence API",
  "version": "0.0.44",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn run compile",
    "compile": "tsc -p tsconfig-build.json",
    "watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/index.js",
    "test": "mocha --no-deprecation --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\"",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@magda/typescript-common": "^0.0.44",
    "body-parser": "^1.13.2",
    "email-validator": "^2.0.3",
    "express": "^4.13.1",
    "html-to-text": "^4.0.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.10",
    "markdown-it": "^8.4.1",
    "mocha": "^5.1.1",
    "nodemailer": "^4.6.4",
    "pug": "^2.0.3",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@magda/scripts": "^0.0.44",
    "@types/chai": "^4.1.3",
    "@types/email-validator": "^1.0.6",
    "@types/express": "^4.0.35",
    "@types/html-to-text": "^1.4.31",
    "@types/lodash": "^4.14.108",
    "@types/markdown-it": "^0.0.4",
    "@types/mocha": "^5.2.0",
    "@types/nock": "^9.1.3",
    "@types/node": "^8.0.14",
    "@types/nodemailer": "^4.6.0",
    "@types/pug": "^2.0.4",
    "@types/sinon": "^4.3.3",
    "@types/supertest": "^2.0.4",
    "@types/yargs": "^8.0.2",
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "nock": "^9.2.5",
    "sinon": "^5.0.7",
    "supertest": "^3.0.0",
    "typescript": "~2.5.0"
  },
  "config": {
    "docker": {
      "name": "data61/magda-correspondence-api",
      "include": "node_modules dist templates Dockerfile"
    },
    "externalUrl": "http://localhost:6101"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true
    }
  }
