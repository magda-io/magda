{
  "name": "@magda/correspondence-api",
  "description": "MAGDA correspondence API",
  "version": "0.0.60-alpha.0",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "test": "mocha --no-deprecation --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\"",
    "dev": "run-typescript-in-nodemon src/index.ts --defaultRecipient magda@mailinator.com",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@magda/typescript-common": "^0.0.60-alpha.0",
    "body-parser": "^1.13.2",
    "email-validator": "^2.0.3",
    "express": "^4.17.1",
    "fs-extra": "^7.0.0",
    "html-to-text": "^4.0.0",
    "lodash": "^4.17.10",
    "markdown-it": "^8.4.1",
    "mime-types": "^2.1.20",
    "mocha": "^5.1.1",
    "mustache": "^3.0.0",
    "nodemailer": "^4.6.4",
    "pug": "^2.0.3",
    "recursive-readdir": "^2.2.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "type-is": "^1.6.16",
    "urijs": "^1.19.4",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^0.0.60-alpha.0",
    "@types/chai": "^4.1.3",
    "@types/email-validator": "^1.0.6",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^5.0.4",
    "@types/html-to-text": "^1.4.31",
    "@types/lodash": "^4.14.108",
    "@types/markdown-it": "^0.0.4",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^5.2.0",
    "@types/mustache": "^0.8.31",
    "@types/nock": "^9.1.3",
    "@types/nodemailer": "^4.6.0",
    "@types/pug": "^2.0.4",
    "@types/recursive-readdir": "^2.2.0",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/sinon": "^4.3.3",
    "@types/supertest": "^2.0.4",
    "@types/type-is": "^1.6.2",
    "@types/urijs": "1.19.13",
    "@types/yargs": "^12.0.8",
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "nock": "^9.2.5",
    "sinon": "^5.0.7",
    "supertest": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "config": {
    "docker": {
      "name": "data61/magda-correspondence-api",
      "include": "node_modules dist emailTemplates Dockerfile"
    },
    "jwtSecret": "squirrel",
    "userId": "00000000-0000-4000-8000-000000000000",
    "externalUrl": "http://localhost:6101"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "stateless": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
