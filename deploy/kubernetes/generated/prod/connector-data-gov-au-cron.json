{
    "apiVersion": "batch/v1beta1",
    "kind": "CronJob",
    "metadata": {
        "name": "connector-data-gov-au"
    },
    "spec": {
        "schedule": "0 4 */3 * *",
        "jobTemplate": {
            "spec": {
                "template": {
                    "metadata": {
                        "name": "connector-data-gov-au"
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "connector-data-gov-au",
                                "image": "data61/magda-ckan-connector:0.0.33-0",
                                "command": [
                                    "node",
                                    "/usr/src/app/component/dist/index.js",
                                    "--config",
                                    "/etc/config/connector.json",
                                    "--registryUrl",
                                    "http://registry-api/v0"
                                ],
                                "imagePullPolicy": "IfNotPresent",
                                "resources": {
                                    "requests": {
                                        "cpu": "500m",
                                        "memory": "500Mi"
                                    },
                                    "limits": {
                                        "cpu": "1000m",
                                        "memory": "1000Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/etc/config",
                                        "name": "config"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "USER_ID",
                                        "value":
                                            "00000000-0000-4000-8000-000000000000"
                                    },
                                    {
                                        "name": "JWT_SECRET",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "auth-secrets",
                                                "key": "jwt-secret"
                                            }
                                        }
                                    }
                                ]
                            }
                        ],
                        "restartPolicy": "OnFailure",
                        "volumes": [
                            {
                                "name": "config",
                                "configMap": {
                                    "name": "connector-config",
                                    "items": [
                                        {
                                            "key": "data-gov-au.json",
                                            "path": "connector.json"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                }
            }
        }
    }
}
