{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "connector-act-government"
  },
  "spec": {
    "template": {
      "metadata": {
        "name": "connector-act-government"
      },
      "spec": {
        "containers": [
          {
            "name": "connector-act-government",
            "image": "data61/magda-project-open-data-connector:0.0.28",
            "command": [
              "node",
              "/usr/src/app/component/dist/index.js",
              "--config",
              "/etc/config/connector.json",
              "--registryUrl",
              "http://registry-api/v0"
            ],
            "imagePullPolicy": "IfNotPresent",
            "resources": {
              "requests": {
                "cpu": "500m",
                "memory": "500Mi"
              },
              "limits": {
                "cpu": "1000m",
                "memory": "1000Mi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/etc/config",
                "name": "config"
              }
            ]
          }
        ],
        "restartPolicy": "OnFailure",
        "volumes": [
          {
            "name": "config",
            "configMap": {
              "name": "connector-config",
              "items": [
                {
                  "key": "act-government.json",
                  "path": "connector.json"
                }
              ]
            }
          }
        ]
      }
    }
  }
}