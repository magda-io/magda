{
  "name": "@magda/minion-framework",
  "description": "MAGDA Minion Framework",
  "version": "0.0.60-alpha.0",
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\"",
    "release": "npm publish || echo \"Skip releasing npm package @magda/minion-framework.\""
  },
  "author": "",
  "license": "Apache-2.0",
  "main": "dist",
  "devDependencies": {
    "@magda/scripts": "^0.0.60-alpha.0",
    "@types/chai": "^4.0.1",
    "@types/express": "^4.17.6",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/lodash": "^4.14.68",
    "@types/mocha": "^2.2.41",
    "@types/nock": "^8.2.1",
    "@types/query-string": "^5.1.0",
    "@types/sinon": "^2.3.3",
    "@types/supertest": "^2.0.2",
    "@types/yargs": "^12.0.8",
    "chai": "^4.1.0",
    "jsverify": "^0.8.2",
    "mocha": "^3.4.2",
    "mocha-testcheck": "^1.0.0-rc.0",
    "nock": "^9.0.14",
    "portfinder": "^1.0.13",
    "query-string": "^6.1.0",
    "sinon": "^2.4.1",
    "supertest": "^3.0.0",
    "testcheck": "^1.0.0-rc.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@magda/registry-aspects": "^0.0.60-alpha.0",
    "@magda/typescript-common": "^0.0.60-alpha.0",
    "body-parser": "^1.17.2",
    "express": "^4.17.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "yargs": "^12.0.5"
  },
  "config": {
    "docker": {
      "include": "node_modules dist"
    }
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "minion": true,
      "library": true,
      "npmPackage": true
    }
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  },
  "files": [
    "dist"
  ]
}
