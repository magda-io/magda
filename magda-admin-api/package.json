{
  "name": "@magda/admin-api",
  "version": "4.2.2",
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "prebuild": "rimraf dist tsconfig.tsbuildinfo",
    "build": "yarn run compile",
    "compile": "tsc -b && ts-module-alias-transformer dist",
    "watch": "tsc -b --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "test": "c8 mocha",
    "retag-and-push": "retag-and-push"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.16.3",
    "@magda/esm-utils": "^1.0.1",
    "@magda/typescript-common": "^4.2.2",
    "c8": "^9.0.0",
    "cross-fetch": "^4.0.0",
    "express": "^4.17.2",
    "http-terminator": "^3.2.0",
    "lodash": "^4.17.4",
    "util.promisify": "^1.0.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@magda/scripts": "^4.2.2",
    "@types/chai": "^4.3.11",
    "@types/config": "0.0.32",
    "@types/express": "^4.17.21",
    "@types/http-proxy": "^1.12.1",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^2.3.3",
    "@types/supertest": "^2.0.16",
    "@types/yargs": "^12.0.8",
    "chai": "^5.0.0-rc.0",
    "jsverify": "^0.8.2",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "request-debug": "^0.2.0",
    "sinon": "^3.2.1",
    "supertest": "^6.3.3",
    "typescript": "~5.3.3"
  },
  "mocha": {
    "import": "tsx/esm",
    "spec": [
      "src/test/**/*.spec.ts"
    ]
  },
  "config": {
    "docker": {
      "name": "magda-admin-api",
      "include": "node_modules dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "userId": "00000000-0000-4000-8000-000000000000"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "api": true,
      "stateless": true
    }
  },
  "c8": {
    "all": true,
    "clean": true,
    "src": [
      "./src"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "_moduleMappings": {
    "magda-typescript-common/src": "@magda/typescript-common/dist"
  }
}
